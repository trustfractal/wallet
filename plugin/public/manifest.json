{
  "manifest_version": 3,
  "version": "0.0.1",
  "short_name": "fractal-wallet",
  "name": "Fractal Wallet - Plugin",
  "description": "Fractal Data Wallet Plugin Extension.",
  "action": {
    "default_title": "fractal-wallet",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["sdk.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-48.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "declarativeContent",
    "tabs",
    "storage"
  ],
  "host_permissions": ["<all_urls>"]
}
