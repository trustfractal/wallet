{
  "name": "@fractalwallet/types",
  "version": "0.1.0",
  "private": true,
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "postinstall": "yarn build",
    "clean": "rm -rf ./lib",
    "build": "yarn clean && yarn build:ts && yarn copy:contracts",
    "build:ts": "tsc --declaration -p tsconfig.json",
    "copy:contracts": "cp src/contracts/*.d.ts lib/contracts"
  },
  "devDependencies": {
    "@types/post-message-stream": "^3.0.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@fractalwallet/sdk": "ssh://git@github.com:trustfractal/fractal-sdk.git",
    "ethers": "^5.1.3"
  }
}
